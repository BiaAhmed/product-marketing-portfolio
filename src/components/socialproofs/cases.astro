---
import { caseStudies, painPointCategories } from '@components/socialproofs/cases-content';
---

<section id="cases" class=" dark:from-theme-moon-bg dark:to-theme-moon-bgAccent py-24">
  <div class="md:w-3/4 lg:w-2/3 mx-auto px-4 sm:px-6 lg:px-8 max-w-6xl text-center">
    <div class="inline-flex items-center justify-center p-2 bg-theme-sun-accent/10 dark:bg-theme-moon-accent/20 rounded-full mb-4">
      <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="w-6 h-6 text-theme-sun-accent dark:text-theme-moon-accent" viewBox="0 0 24 24">
        <path fill-rule="evenodd" d="M9 4.5a.75.75 0 01.721.544l.813 2.846a3.75 3.75 0 002.576 2.576l2.846.813a.75.75 0 010 1.442l-2.846.813a3.75 3.75 0 00-2.576 2.576l-.813 2.846a.75.75 0 01-1.442 0l-.813-2.846a3.75 3.75 0 00-2.576-2.576l-2.846-.813a.75.75 0 010-1.442l2.846-.813A3.75 3.75 0 007.466 7.89l.813-2.846A.75.75 0 019 4.5z" clip-rule="evenodd" />
      </svg>
    </div>

    <h3 class="text-xl font-bold text-theme-sun-text dark:text-theme-moon-text md:text-4xl lg:text-4xl mb-4">
      Impact stories (mini case studies)
    </h3>
    <p class="text-lg text-theme-sun-textMuted dark:text-theme-moon-textMuted max-w-2xl mx-auto mb-8">
      Solutions to common challenges in product adoption, visibility, and conversion
    </p>
  </div>

  <!-- Pain Point Categories -->
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 mb-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      {painPointCategories.map((category) => (
        <div class="bg-white dark:bg-theme-moon-bgAccent rounded-xl p-6 border border-theme-sun-border/10 dark:border-theme-moon-border/10 text-center transition-all hover:border-theme-sun-accent/30 dark:hover:border-theme-moon-accent/30">
          <h3 class="text-lg font-semibold text-theme-sun-text dark:text-theme-moon-text mb-2">{category.label}</h3>
          <p class="text-sm text-theme-sun-textMuted dark:text-theme-moon-textMuted">{category.description}</p>
        </div>
      ))}
    </div>
  </div>

  <!-- Case Studies -->
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid gap-12 grid-cols-1 lg:grid-cols-2">
      {
        caseStudies.map((study) => (
          <div class="group bg-white dark:bg-theme-moon-bgAccent border border-theme-sun-border/20 dark:border-theme-moon-border/20 rounded-2xl overflow-hidden shadow-md hover:shadow-xl transition-all duration-300">
            <!-- Card header with company info -->
            <div class="relative pt-6 pl-2 pr-6 border-b border-theme-sun-border/10 dark:border-theme-moon-border/10 flex items-center justify-between">
              <div class="flex items-center gap-4">
                <img src={study.logo} alt={study.alt} loading="lazy" decoding="async" class="w-17 theme-logo" />
              </div>
              
              <!-- Pain point category badge -->
              <span class="text-center p-2  bg-theme-sun-accent/10 dark:bg-theme-moon-accent/20 text-theme-sun-accent dark:text-theme-moon-accent rounded-full text-xs font-medium">
                {painPointCategories.find(c => c.id === study.painPointCategory)?.label}
              </span>
            </div>
            <div>
                  <h3 class="pl-6 px-3 py-1  text-xl font-bold text-theme-sun-text dark:text-theme-moon-text group-hover:text-theme-sun-accent dark:group-hover:text-theme-moon-accent transition-colors">
                    {study.title}
                  </h3>
                </div>

            <!-- Card body -->
            <div class="p-6">
              <!-- Tags -->
              <div class="flex flex-wrap gap-2 mb-6">
                {
                  study.tags.map((tag) => (
                    <span class="bg-theme-sun-bgAccent/50 dark:bg-theme-moon-bg/70 px-2.5 py-1 rounded-md text-xs text-theme-sun-secondary dark:text-theme-moon-secondary font-medium">{tag}</span>
                  ))
                }
              </div>

              <!-- Narrative framework -->
              <div class="space-y-6">
                <!-- Challenge -->
                <div class="flex gap-4">
                  <div class="flex-shrink-0 w-8 h-8 rounded-full bg-red-100 dark:bg-red-900/30 flex items-center justify-center text-red-600 dark:text-red-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                  </div>
                  <div>
                    <h4 class="text-sm font-semibold text-theme-sun-text dark:text-theme-moon-text mb-1">Challenge</h4>
                    <p class="text-sm text-theme-sun-textMuted dark:text-theme-moon-textMuted">{study.challenge}</p>
                  </div>
                </div>

                <!-- Approach -->
                <div class="flex gap-4">
                  <div class="flex-shrink-0 w-8 h-8 rounded-full bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center text-blue-600 dark:text-blue-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                  </div>
                  <div>
                    <h4 class="text-sm font-semibold text-theme-sun-text dark:text-theme-moon-text mb-1">Approach</h4>
                    <p class="text-sm text-theme-sun-textMuted dark:text-theme-moon-textMuted">{study.approach}</p>
                  </div>
                </div>

                <!-- Action -->
                <div class="flex gap-4">
                  <div class="flex-shrink-0 w-8 h-8 rounded-full bg-amber-100 dark:bg-amber-900/30 flex items-center justify-center text-amber-600 dark:text-amber-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                  </div>
                  <div>
                    <h4 class="text-sm font-semibold text-theme-sun-text dark:text-theme-moon-text mb-1">Action</h4>
                    <p class="text-sm text-theme-sun-textMuted dark:text-theme-moon-textMuted">{study.action}</p>
                  </div>
                </div>

                <!-- Results -->
                <div class="flex gap-4">
                  <div class="flex-shrink-0 w-8 h-8 rounded-full bg-green-100 dark:bg-green-900/30 flex items-center justify-center text-green-600 dark:text-green-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <div>
                    <h4 class="text-sm font-semibold text-theme-sun-text dark:text-theme-moon-text mb-1">Results</h4>
                    <p class="text-sm text-theme-sun-textMuted dark:text-theme-moon-textMuted">{study.results}</p>
                  </div>
                </div>

                <!-- Learning -->
                <div class="flex gap-4">
                  <div class="flex-shrink-0 w-8 h-8 rounded-full bg-purple-100 dark:bg-purple-900/30 flex items-center justify-center text-purple-600 dark:text-purple-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                    </svg>
                  </div>
                  <div>
                    <h4 class="text-sm font-semibold text-theme-sun-text dark:text-theme-moon-text mb-1">Key Learning</h4>
                    <p class="text-sm text-theme-sun-textMuted dark:text-theme-moon-textMuted">{study.learning}</p>
                  </div>
                </div>
              </div>

              <!-- Metrics -->
              <div class="mt-8 pt-6 border-t border-theme-sun-border/10 dark:border-theme-moon-border/10">
                <div class="flex items-center justify-between mb-3">
                  <p class="text-sm font-semibold text-theme-sun-secondary dark:text-theme-moon-secondary">Impact Metrics</p>
                  <span class="text-xs px-2 py-1 bg-theme-sun-accent/10 dark:bg-theme-moon-accent/20 text-theme-sun-accent dark:text-theme-moon-accent rounded-full">Verified</span>
                </div>
                <div class="grid grid-cols-3 gap-3 text-center">
                  {
                    Object.entries(study.snapshot).map(([label, value]) => (
                      <div class="bg-theme-sun-bgAccent/50 dark:bg-theme-moon-bg/70 px-3 py-2 rounded-lg flex flex-col items-center">
                        <div class="text-lg font-bold text-theme-sun-accent dark:text-theme-moon-accent">{value}</div>
                        <div class="text-[10px] uppercase tracking-wider text-theme-sun-textMuted dark:text-theme-moon-textMuted mt-1">{label}</div>
                      </div>
                    ))
                  }
                </div>
              </div>

              <!-- Testimonial -->
              <div class="mt-8 bg-theme-sun-bgAccent/30 dark:bg-theme-moon-bg/30 rounded-xl p-4">
                <div class="flex items-start gap-3">
                  <div class="text-theme-sun-accent dark:text-theme-moon-accent text-3xl leading-none">"</div>
                  <div>
                    <p class="text-sm italic text-theme-sun-text dark:text-theme-moon-text mb-2">{study.testimonial.quote}</p>
                    <div class="text-xs font-medium text-theme-sun-secondary dark:text-theme-moon-secondary">
                      {study.testimonial.author}, <span class="text-theme-sun-textMuted dark:text-theme-moon-textMuted">{study.testimonial.role}</span>
                    </div>
                  </div>
                </div>
              </div>

              <!-- "How I Did It" Expandable Section -->
              <div class="mt-6">
                <details class="group">
                  <summary class="flex items-center justify-between cursor-pointer text-sm font-medium text-theme-sun-text dark:text-theme-moon-text">
                    <span class="flex items-center gap-2">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-theme-sun-accent dark:text-theme-moon-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                      </svg>
                      How I did it
                    </span>
                    <svg class="h-5 w-5 text-theme-sun-textMuted dark:text-theme-moon-textMuted group-open:rotate-180 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                  </summary>
                  <div class="mt-4 pl-6 text-sm text-theme-sun-textMuted dark:text-theme-moon-textMuted">
                    <ul class="list-disc space-y-2">
                      {study.howDetails.map((detail) => (
                        <li>{detail}</li>
                      ))}
                    </ul>
                  </div>
                </details>
              </div>
            </div>

            <!-- Card footer -->
            <div class="px-6 py-4 bg-theme-sun-bgAccent/30 dark:bg-theme-moon-bg/50 border-t border-theme-sun-border/10 dark:border-theme-moon-border/10">
              <a href={study.ctaLink} class="flex items-center justify-between w-full text-sm font-medium">
                <span class="text-theme-sun-text dark:text-theme-moon-text">View full case study</span>
                <span class="flex items-center justify-center w-8 h-8 bg-theme-sun-accent/10 dark:bg-theme-moon-accent/20 rounded-full text-theme-sun-accent dark:text-theme-moon-accent group-hover:bg-theme-sun-accent dark:group-hover:bg-theme-moon-accent group-hover:text-white transition-all">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                  </svg>
                </span>
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>

  <!-- Call to action -->
  <div class="mt-16 text-center">
    <a href="#contact" class="btn-primary inline-flex items-center gap-2 ">
      Discuss your project
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5L12 21m0 0l-7.5-7.5M12 21V3" />
      </svg>
    </a>
  </div>
</section>
